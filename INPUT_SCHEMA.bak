{
  "title": "DNB Scraper (Firebase optional)",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "startUrls": {
      "title": "Start URLs",
      "type": "array",
      "editor": "requestListSources",
      "description": "List of page sources to crawl. Use objects like { \"url\": \"https://...\" }."
    },
    "maxRequestsPerCrawl": {
      "title": "Max requests",
      "type": "integer",
      "default": 50,
      "description": "Upper bound for total requests in a single run."
    },
    "maxConcurrency": {
      "title": "Max concurrency",
      "type": "integer",
      "default": 5,
      "description": "Maximum parallel pages to open at once."
    },
    "maxRequestsPerMinute": {
      "title": "Throttle (requests/min)",
      "type": "integer",
      "default": 60,
      "description": "Rate limit to be polite and reduce blocks."
    },
    "useProxy": {
      "title": "Use Apify Proxy",
      "type": "boolean",
      "default": false,
      "description": "Toggle to route traffic via Apify Proxy."
    },
    "proxyGroups": {
      "title": "Proxy groups",
      "type": "array",
      "editor": "stringList",
      "description": "Optional Apify proxy groups."
    },
    "selectors": {
      "title": "CSS selectors",
      "type": "object",
      "editor": "json",
      "description": "Configure CSS selectors for fields you want to extract.",
      "properties": {
        "name": { "title": "Name selector", "type": "string", "description": "Selector for company name." },
        "address": { "title": "Address selector", "type": "string", "description": "Selector for street address." },
        "phone": { "title": "Phone selector", "type": "string", "description": "Selector for phone number." },
        "website": { "title": "Website selector", "type": "string", "description": "Selector for the company website link (href)." },
        "industry": { "title": "Industry selector", "type": "string", "description": "Selector for industry/category label." }
      }
    },
    "firebaseEnabled": {
      "title": "Enable Firebase sync",
      "type": "boolean",
      "default": false,
      "description": "If true, upsert results to Firestore in addition to the dataset."
    },
    "firebaseCollection": {
      "title": "Firestore collection",
      "type": "string",
      "default": "companies",
      "description": "Firestore collection name for saved documents."
    },
    "login": {
      "title": "(Optional) Login flow â€” only use with permission",
      "type": "object",
      "editor": "json",
      "description": "Configure a simple form-based login step. Only use if the site permits it.",
      "properties": {
        "enabled": { "title": "Enable login", "type": "boolean", "description": "Enable the login step before crawling." },
        "loginUrl": { "title": "Login URL", "type": "string", "description": "URL of the login page." },
        "username": { "title": "Username", "type": "string", "description": "Login username." },
        "password": { "title": "Password", "type": "string", "description": "Login password." },
        "usernameSelector": { "title": "Username selector", "type": "string", "description": "CSS selector for username/email input." },
        "passwordSelector": { "title": "Password selector", "type": "string", "description": "CSS selector for password input." },
        "submitSelector": { "title": "Submit selector", "type": "string", "description": "CSS selector for submit button." }
      }
    }
  },
  "required": ["startUrls"]
}
